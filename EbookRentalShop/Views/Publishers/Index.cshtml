@model IEnumerable<EbookRentalShop.Models.Publishers>

@{
    ViewBag.Title = "Wydawnictwa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Wydawnictwa</h2>

<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nazwa wydawnictwa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.PublisherID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.PublisherID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.PublisherID })
        </td>
    </tr>
}

</table>
