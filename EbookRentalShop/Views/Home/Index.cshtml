
@{
    ViewBag.Title = "Strona główna";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1 class="text-center">
        Strona główna
    </h1>
</div>
<div id="myCarousel" class="carousel slide" data-ride="carousel" >
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active ">
            <img class="img-responsive center-block" src="https://lh3.googleusercontent.com/proxy/jq8ZuuB3eDs9AfQ3kHMb-xoIcWz4xzpCM0XLT6vcmANXH4q5li5F4K6umQyzuHr__uyHcqs7UoDDGOMC1jGT5S9QXgZ_QDY" alt="Los Angeles">
        </div>

        <div class="item">
            <img class="img-responsive center-block" src="https://media.merlin.pl/media/300x452/000/003/727/56ba5554aa0f1.jpg" alt="Chicago">
        </div>

        <div class="item">
            <img class="img-responsive center-block" src="https://cdn-lubimyczytac.pl/upload/books/4000/4961/352x500.jpg" alt="New York">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
