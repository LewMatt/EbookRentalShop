@model IEnumerable<EbookRentalShop.Models.Authors>

@{
    ViewBag.Title = "Autorzy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Autorzy</h2>

<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.AuthorID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.AuthorID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.AuthorID })
        </td>
    </tr>
}

</table>
